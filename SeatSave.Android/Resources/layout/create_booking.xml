<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40px"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:text="Book A Seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textFontWeight="700"
            android:textSize="36sp"
            android:textColor="@android:color/black"
            android:paddingHorizontal="40px"
            />
    

        <TextView
            android:text="Center for Learning and Information Resources - Einstein Building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:paddingHorizontal="40px"
            android:layout_marginBottom="37dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:id="@+id/dateGroup"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:text="Select your date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp"
                    />
                 <ProgressBar
                    android:id="@+id/dateProgressLoader"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
                <HorizontalScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_recyler_view"
                    />
                </HorizontalScrollView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/periodGroup"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:text="Select your time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp"
                    />
                    <ProgressBar
                    android:id="@+id/periodProgressLoader"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
                <HorizontalScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/period_recycler_view"
                />
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seatGroup"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:text="Pick your seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:textFontWeight="700"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp"
                    />
                <ProgressBar
                    android:id="@+id/seatProgressLoader"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
                <HorizontalScrollView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="38dp"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seat_recycler_view"
                />
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:text="BOOK SEAT"
            android:backgroundTint="@color/bluish"
            android:textFontWeight="700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookSeatButton"
            android:minHeight="70dp"
            android:layout_marginHorizontal="40px"
        />


    </LinearLayout>
</ScrollView>

