<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40px">
    <TextView
        android:text="You have no booking at the moment..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@color/duskBlue"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_2_material"
        />
    
         
    <Button
        android:text="BOOK A SEAT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBookSeat"
        android:layout_marginTop="20px"
        android:backgroundTint="@color/bluish"
        android:textColor="@android:color/white" 
        
         />
</LinearLayout>
