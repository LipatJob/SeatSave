<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40px"
    >
    <TextView
        android:text="Your booking is at 10:00 am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@color/duskBlue"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:paddingBottom="20px" />
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:background="@color/pearlBrush"
        android:padding="40px">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            
           >
            <TextView
                android:text="Code: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@android:color/black" 
                
            />
            <TextView
                android:text="123456"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <TextView
            android:textSize="@dimen/abc_text_size_body_1_material" 
            android:text="Present this code to the librarian to confirm your booking."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:paddingTop="20px" 
            android:textColor="@android:color/black" />
        <TextView
            android:textSize="@dimen/abc_text_size_body_1_material" 
            android:text=" A proof of booking has also been sent to your email address."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:paddingTop="20px" 
            android:textColor="@android:color/black" />
    </LinearLayout>
    <TextView
        android:text="Booking Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:paddingTop="40px"
        android:paddingBottom="40px" 
        android:textColor="@android:color/black" 
         />
    <TextView
        android:text="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:paddingTop="10px"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <TextView
        android:text="May 26, 2022"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" 
        android:textColor="@android:color/black" 
    />
    <TextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:paddingTop="10px" 
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:text="10:00 am to 11:30am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12" 
        android:textColor="@android:color/black" />
    <TextView
        android:text="Seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:paddingTop="10px" 
        android:textColor="@android:color/black" 
        android:textStyle="bold"/>
    <TextView
        android:text="R01 - carrel desk (with outlet)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/black"
        android:paddingBottom="60px" 
        />
    <Button
        android:text="CANCEL BOOKING"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:backgroundTint="@color/valentineRed"
        android:textColor="@android:color/white" 
         />
</LinearLayout>
